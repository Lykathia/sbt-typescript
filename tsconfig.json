{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": false,
    "rootDir": "src/main/typescript",
    "outDir": "./src/main/resources",
    "lib": ["es6"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch":true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "test",
    "src/sbt-test"
  ]
}